{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Modules
    "module": "Node16",
    // "moduleResolution": "Node16",

    // Emit
    "sourceMap": true,
    "declaration": true,

    // Language and Environment
    // >= 14       ES2020
    // >= 16       ES2021
    // >= 17       ES2022
    "target": "ES2022",
    "lib": ["ES2022"],

    // Interop Constraints
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    // Completeness
    "skipLibCheck": true,

    "outDir": "./dist/"
  },
  "include": ["./src/"]
}
